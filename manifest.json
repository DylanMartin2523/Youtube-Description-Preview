{
  "name": "Youtube Description Preview",
  "version": "1.26",
  "description": "Provides a unobtrusive description preview under youtube video thumbnails.",
  "permissions": ["declarativeContent", "storage"],
  "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["contentScript.js"],
            "css": ["css/myStyles.css"],
            "run_at": "document_end"
        }
        
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["contentScript.js", "images/View.png", "image/Hide.png"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/DP16.png",
      "32": "images/DP32.png",
      "48": "images/DP48.png",
      "128": "images/DP128.png"
    }
  },
  "icons": {
    "16": "images/DP16.png",
    "32": "images/DP32.png",
    "48": "images/DP48.png",
    "128": "images/DP128.png"
  },
  "manifest_version": 2
}
